
<fop version="1.0">

    <base>./</base>
    <font-base>${typeSetting.dir}/fonts</font-base>

    <renderers>
        <renderer mime="application/pdf">
            
            <output-profile>${typeSetting.dir}/icc/Blurb_ICC_Profile.icc</output-profile>
  
            <fonts>
                <font metrics-url="file:${typeSetting.dir}/fonts/Lusitana/Lusitana-Regular.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Lusitana/Lusitana-Regular.ttf">
                    <font-triplet name="Lusitana" style="normal" weight="normal"/>
                </font>                
                <font metrics-url="file:${typeSetting.dir}/fonts/Lusitana/Lusitana-Bold.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Lusitana/Lusitana-Bold.ttf">
                    <font-triplet name="Lusitana" style="normal" weight="bold"/>
                </font>

                <font metrics-url="file:${typeSetting.dir}/fonts/Muli/Muli-Light.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Muli/Muli-Light.ttf">
                    <font-triplet name="Muli" style="normal" weight="300"/>
                </font>
                <font metrics-url="file:${typeSetting.dir}/fonts/Muli/Muli-Regular.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Muli/Muli-Regular.ttf">
                    <font-triplet name="Muli" style="normal" weight="400"/>
                </font>
                <font metrics-url="file:${typeSetting.dir}/fonts/Muli/Muli-LightItalic.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Muli/Muli-LightItalic.ttf">
                    <font-triplet name="Muli" style="italic" weight="300"/>
                </font>
                <font metrics-url="file:${typeSetting.dir}/fonts/Muli/Muli-Italic.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Muli/Muli-Italic.ttf">
                    <font-triplet name="Muli" style="italic" weight="400"/>
                </font>
                
                <font metrics-url="file:${typeSetting.dir}/fonts/Gruppo/Gruppo-Regular.xml"  
                      kerning="yes" 
                      embed-url="file:${typeSetting.dir}/fonts/Gruppo/Gruppo-Regular.ttf">
                    <font-triplet name="Gruppo" style="normal" weight="400"/>
                </font>
            </fonts>
        </renderer>
    </renderers>
</fop>
