    <!-- See http://www.viovio.com/wiki/Cropping+And+Bleed 
             http://www.viovio.com/wiki/Book+Cover+Specifications
             http://www.viovio.com/photos/gallery/15157
    -->
    <!-- 1" = 72 pt -->
    <format id="viovio:11x8.5:imagewrap hardcover:premium">
        <pageWidth>810</pageWidth>                                  <!-- 11" + 0.25"   -->
        <pageHeight>630</pageHeight>                                <!-- 8.5" + 0.25"  -->
        <bleed>9</bleed>                                            <!-- 1/8"          -->
        <safeBoundaryMargin>18</safeBoundaryMargin>                 <!-- 1/4"          -->
        <safeBoundaryBindingMargin>18</safeBoundaryBindingMargin>   <!-- 1/4"          -->
        <gutterWidth>31</gutterWidth>                               <!-- 0.44"         -->
        <coverWidth>1620</coverWidth>
        <coverHeight>630</coverHeight>
        <insideFlapWidth>0</insideFlapWidth>
        <safeCoverMargin>63</safeCoverMargin>                       <!-- 1" - bleed    -->
    </format>

    <format id="eBook:12x8">
        <pageWidth>864</pageWidth>
        <pageHeight>576</pageHeight>
        <bleed>0</bleed>
        <safeBoundaryMargin>0</safeBoundaryMargin>
        <safeBoundaryBindingMargin>0</safeBoundaryBindingMargin>
        <safeCoverMargin>0</safeCoverMargin>                       
    </format>
    

</formats>